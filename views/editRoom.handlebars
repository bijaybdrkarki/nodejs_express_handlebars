<div class="edit-room">
    <h2 class="">Edit Room</h2>
    <form  method="POST" action="/admin/room/update/{{_id}}?method=PUT" enctype="multipart/form-data">
        <div class="edit-form">
        <label>Name</label>
        <input type="text" name="name" id="name" value={{name}}> 
        </div>
        <div class="edit-form">
        <label>Description</label>
        <textarea id="description" name="description"> {{description}}</textarea>
        </div>
        <div class="edit-form">
        <label>Extra</label>
        <textarea id="extra" name="extra">{{extra}} </textarea>
        </div>
        
        <div class="edit-form">
        <label>Price</label>
        <input class="price-rating" type="number" name="price" step="any" id="price" value={{price}}> 
        </div>

        <div class="edit-form">
        <label>Image</label>
        <div>
        <input type="file" accept="image/*" name="roomImg" id="roomImg"> 
        <img src="/img/{{roomImg}}" class="image">
        </div>
        </div>
        
        <div class="edit-form">
        <label>Rating</label>
        <input class="price-rating" type="number" min=1 step="any" name="rating" id="price" value={{rating}}> 
        </div>

        <div class="edit-form">
        <label>Location</label>
        <input class="price-rating" type="text" name="location" id="location" value={{location}}> 
        </div>

        <div class="edit-form">
        <label>Featured</label>
        <div>
            <input type="radio" id="yes"  name="feature" {{#eq featuredRoom compare=true}} checked {{/eq}} value="yes">
            <label for="yes">Yes</label>
            <input type="radio" id="no" name="feature" {{#eq featuredRoom compare=false}} checked {{/eq}} value="no">
            <label for="no">No</label>
        </div>
        </div>

        <input type="submit" class="linkAsButton" value="Update Room">

    </form>
</div>
